<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BraamBowlApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BraamBowlApp.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg  border-bottom box-shadow fixed-top" style=" background: linear-gradient(135deg, #34d399 10%, #dcfce7 50%, #bbf7d0 100%);">
          
            <div class="container-fluid">
                <a class="navbar-brand logo" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/images/LOGO.jpg" style="height:60px; width:auto;"  alt="BraamBowlApp Logo" class="img-fluid" />
                </a>
                
                
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                      
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Dashboard"><strong>Dashboard</strong></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Restuarants"><strong>Restaurants</strong></a>
                        </li>
                      @*   <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li> *@
                    </ul>
                    <partial style="color:white" name="_LoginPartial" class="text-white" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container main-content">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer style="
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    background: #34d399;
    color: #ffffff;
    text-align: center;
    padding: 12px 0 8px;
    font-size: 14px;
    z-index: 9999;
    box-shadow: 0 -2px 6px rgba(0,0,0,0.2);
">
        <hr style="border: 0; border-top: 1px solid rgba(255, 255, 255, 0.2); margin: 0 auto 6px; width: 90%;">
        <p style="margin: 0; color: rgba(255,255,255,0.75);">
            © 2025 BraamBowl Application. All rights reserved.
        </p>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>